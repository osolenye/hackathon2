<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3B664"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_login_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="#9FBB73"
        android:text="@string/login"
        app:layout_constraintStart_toStartOf="@+id/button_registration_activity"
        app:layout_constraintTop_toBottomOf="@+id/button_registration_activity"
        android:onClick="onButtonLoginClick"/>

    <Button
        android:id="@+id/button_registration_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="281dp"
        android:background="#9FBB73"
        android:text="@string/registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onButtonRegistrationClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>